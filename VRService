-- Enable VR mode if a headset is detected
local VRService = game:GetService("VRService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

if VRService.VREnabled then
	print("VR headset detected! Enabling VR mode.")


	camera.CameraType = Enum.CameraType.Scriptable
	camera.CFrame = CFrame.new(Vector3.new(0,5,0)) 


	VRService.UserCFrameChanged:Connect(function(userCFrame, position, rotation)
		if userCFrame == Enum.UserCFrame.Head then
			camera.CFrame = CFrame.new(position) * CFrame.fromEulerAnglesXYZ(rotation.X, rotation.Y, rotation.Z)
		end
	end)
else
	print("No VR headset found.")
end
